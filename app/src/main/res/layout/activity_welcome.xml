<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apresentacao.activity.WelcomeActivity"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:animateLayoutChanges="true"
    android:background="#000" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:id="@+id/bgLogin"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewLogin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_logo"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:textAlignment="center"
                android:text="ESTÁ PRONTO PARA UMA VIDA MAIS SAUDÁVEL?"
                android:textSize="25dp"
                android:textColor="#EEE"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:textAlignment="center"
                android:text="NÓS SOMOS A SOLUÇÃO."
                android:textSize="25dp"
                android:textColor="#EEE"
                android:textStyle="bold"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textCapWords|textPersonName"
                android:maxLength="40"
                android:id="@+id/editNome"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:hint="qual seu nome?"
                android:textColorHint="#eeeeee"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#eeeeee"
                android:background="@drawable/bg_edit_text_welcome"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="continuar"
                android:textAllCaps="false"
                android:id="@+id/btnContinuar"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_login"
                android:textColor="#cceeeeee"
                android:textSize="20dp"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
