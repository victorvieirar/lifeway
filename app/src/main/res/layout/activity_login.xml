<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apresentacao.activity.LoginActivity"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="#2abe34"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_login"
            android:id="@+id/bgLogin"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:alpha="0.4"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewLogin"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_logo"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textCapWords|textPersonName"
                android:ems="10"
                android:id="@+id/editNome"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="nome completo"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#888"
                android:background="#FFF"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editData"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="data de nascimento"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#888"
                android:background="#FFF"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editPeso"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="peso (em kg)"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#888"
                android:background="#FFF"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editAltura"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="altura (em metros)"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#888"
                android:background="#FFF"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="CONTINUAR"
                android:id="@+id/btnAcessar"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="#0a6c10"
                android:textColor="#DDD"
                android:textSize="20dp"
                />

        </LinearLayout>
    </ScrollView>



</RelativeLayout>
